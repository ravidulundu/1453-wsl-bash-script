# Install Claude Code CLI
# Install Claude Code CLI
install_claude_code() {
    echo ""
    gum_header "CLAUDE CODE CLI" "Anthropic Claude Terminal"

    # Check if already installed
    if command -v claude &> /dev/null; then
        local version
        version=$(claude --version 2>/dev/null | head -n1 || echo "unknown")
        gum_success "AtlandÄ±" "Claude Code CLI zaten kurulu: $version"
        track_skip "Claude Code CLI" "Zaten kurulu"
        return 0
    fi

    # Download and install
    local temp_installer=$(mktemp)
    
    local install_cmd="
        if curl -fsSL \"$CLAUDE_CODE_INSTALL_URL\" -o \"$temp_installer\" 2>/dev/null; then
            bash \"$temp_installer\"
            rm -f \"$temp_installer\"
        else
            rm -f \"$temp_installer\"
            exit 1
        fi
    "

    if gum_spin_run "Claude Code CLI kuruluyor..." "$install_cmd"; then
        reload_shell_configs

        if command -v claude &> /dev/null; then
            local version
            version=$(claude --version 2>/dev/null | head -n1 || echo "unknown")
            gum_success "BaÅŸarÄ±lÄ±" "Claude Code CLI kuruldu: $version"
            gum_info "KullanÄ±m" "Komut: claude"
            track_success "Claude Code CLI" "$version"
            return 0
        else
            gum_alert "Dikkat" "Kurulum tamamlandÄ± ama 'claude' komutu bulunamadÄ±. Shell'i yenileyin: source ~/.bashrc"
            track_failure "Claude Code CLI" "Komut bulunamadÄ± (shell reload gerekli)"
            return 1
        fi
    else
        gum_alert "Hata" "Claude Code CLI kurulumu baÅŸarÄ±sÄ±z! Elle kurmak iÃ§in: npm install -g @anthropic-ai/claude-code"
        track_failure "Claude Code CLI" "Ä°ndirme veya kurulum baÅŸarÄ±sÄ±z"
        return 1
    fi
}

# Install Gemini CLI
install_gemini_cli() {
    echo ""
    gum_header "GEMINI CLI" "Google AI SDK"

    if python3 -c "import google.generativeai" 2>/dev/null; then
        gum_success "AtlandÄ±" "Gemini CLI zaten kurulu"
        track_skip "Gemini CLI" "Zaten kurulu"
        return 0
    fi

    if ! command -v python3 &> /dev/null; then
        gum_alert "Gereksinim" "Python kurulu deÄŸil"
        install_python || return 1
    fi

    if gum_spin_run "Google AI SDK kuruluyor..." "python3 -m pip install google-generativeai --break-system-packages 2>/dev/null || python3 -m pip install google-generativeai"; then
        local version
        version=$(python3 -c "import google.generativeai; print(google.generativeai.__version__)" 2>/dev/null || echo "unknown")
        gum_success "BaÅŸarÄ±lÄ±" "Gemini CLI kuruldu: $version"
        track_success "Gemini CLI" "$version"
        return 0
    else
        gum_alert "Hata" "Gemini CLI kurulumu baÅŸarÄ±sÄ±z!"
        track_failure "Gemini CLI" "pip install baÅŸarÄ±sÄ±z"
        return 1
    fi
}

# Install OpenCode CLI
install_opencode_cli() {
    echo ""
    echo -e "${YELLOW}[BÄ°LGÄ°]${NC} OpenCode CLI kurulumu baÅŸlatÄ±lÄ±yor..."

    # Check if already installed
    if command -v opencode &> /dev/null; then
        local version
        version=$(opencode --version 2>/dev/null || echo "unknown")
        echo -e "${CYAN}[!]${NC} OpenCode CLI zaten kurulu: $version"
        track_skip "OpenCode CLI" "Zaten kurulu"
        return 0
    fi

    if ! command -v npm &> /dev/null; then
        echo -e "${YELLOW}[UYARI]${NC} NPM kurulu deÄŸil. NVM ile Node.js kuruluyor..."
        if ! install_nvm; then
            track_failure "OpenCode CLI" "NPM gereksinimi karÅŸÄ±lanamadÄ±"
            return 1
        fi
    fi

    echo -e "${YELLOW}[BÄ°LGÄ°]${NC} OpenCode CLI npm ile kuruluyor..."
    if npm install -g opencode-cli; then
        reload_shell_configs

        if command -v opencode &> /dev/null; then
            local version
            version=$(opencode --version 2>/dev/null || echo "unknown")
            echo -e "${GREEN}[BAÅARILI]${NC} OpenCode CLI kurulumu tamamlandÄ±!"
            track_success "OpenCode CLI" "$version"
            return 0
        else
            echo -e "${RED}[HATA]${NC} OpenCode CLI kurulumu baÅŸarÄ±sÄ±z!"
            track_failure "OpenCode CLI" "Komut bulunamadÄ±"
            return 1
        fi
    else
        echo -e "${RED}[HATA]${NC} OpenCode CLI kurulumu baÅŸarÄ±sÄ±z!"
        track_failure "OpenCode CLI" "npm install baÅŸarÄ±sÄ±z"
        return 1
    fi
}

